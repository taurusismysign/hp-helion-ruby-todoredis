<%= form_for @todo, :html => { :class => "form-horizontal todo" } do |f| %>

    <% if @todo.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@todo.errors.count, "error") %> prohibited this todo from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @todo.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :is_completed, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :is_completed %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :target_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :target_date, :class => 'form-control' %>
    </div>
  </div>

   <br>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  todos_path, :class => 'btn btn-default' %>
<% end %>
